@page
@model StoryModel
@{
    ViewData["Title"] = "Story";
}
<h1>@ViewData["Title"]</h1>
<div class="row">
	<div class="col-12">
		<!-- If no empty fields submitted -->
		@if (!string.IsNullOrEmpty(Model.First) && !string.IsNullOrEmpty(Model.Second) && !string.IsNullOrEmpty(Model.Third) && !string.IsNullOrEmpty(Model.Fourth) && !string.IsNullOrEmpty(Model.Fifth))
		{
			<h4>
				Today, every student has a computer small enough to fit into his <u class="text-danger">@Model.First</u>.
				He can solve any math problem by simply pushing the computer's little <u class="text-danger">@Model.Second</u>.
				Computers can add, multiply, divide, and <u class="text-danger">@Model.Third</u>.
				They can also be better than a(n) <u class="text-danger">@Model.Fourth</u>.
				Some computers are <u class="text-danger">@Model.Fifth</u>.
			</h4>
		}
		else
		{
			<h1><b class="text-danger">You missed a field my guy!</b></h1>
		}
	</div>
</div>
<div class="container">
	<a class="nav-link text-dark" asp-area="" asp-page="/Index">Return to Input</a>
</div>
